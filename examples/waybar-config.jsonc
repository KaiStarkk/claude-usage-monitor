// Waybar configuration for Claude Usage Monitor
// Add this to your waybar config.jsonc
//
// 1. Add "custom/claude-usage" to your modules-right (or left/center)
// 2. Add the custom module definition below

{
  // Add to your bar modules
  "modules-right": ["custom/claude-usage", "clock"],

  // Custom module definition
  "custom/claude-usage": {
    "exec": "~/.local/bin/claude-usage-bar.sh",
    "return-type": "json",
    "interval": 60,
    "tooltip": true,
    "on-click": "xdg-open https://claude.ai/settings/usage",
    "on-click-middle": "~/.local/bin/claude-usage-cycle.sh display",
    "on-click-right": "rm -f /tmp/claude-usage-api-cache",
    "on-scroll-up": "~/.local/bin/claude-usage-cycle.sh style up",
    "on-scroll-down": "~/.local/bin/claude-usage-cycle.sh style down"
  }
}

